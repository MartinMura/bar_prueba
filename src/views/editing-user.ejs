<%- include('partials/head.ejs') %>
<%- include('partials/header.ejs') %>

<body>

    

    <main class="register">
        <div class="register-box">
            <div class="div-form-register">
                <form action="/users/edit-user/<%= userToEdit[0].id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                
                    <label>Nombre</label>
                    <input type="text" name="first_name" value="<%= userToEdit[0].first_name %> ">
                    
                
                
                    <label class="apellido-register">Apellido</label> 
                    <input type="text" name="last_name" value="<%= userToEdit[0].last_name %> ">
                    
                    
                
                    
                    <label class="usuario-register">Nombre de usuario</label> 
                    <input type="text" name="usuario">

                    <label class="email-register">Correo electrónico</label> 
                    <input type="email" name="email" value="<%= userToEdit[0].email %> ">
                    
                
                
                    <label class="contraseña-register">Contraseña</label> <input type="password" name="password">

                    <br>
                    
                    <label for="">Imagen de perfil:</label>
                    <input type="file" name="image">

                    <br>
                    <button type="submit">Actualizar</button>   <button><a href="/users/delete-user/<%= userToEdit[0].id %> ">Borrar</a></button>
                    
                    
                
                
                    
                    
                
                    

            
                </form>
            </div>
            <img src="/images/images-de-wireframe/Angus-young-sign-up.jpg" alt="">
        </div>


    </main>

    <%- include('partials/footer.ejs') %>
    
</body>
</html>