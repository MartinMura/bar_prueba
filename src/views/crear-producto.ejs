<%- include('partials/head.ejs') %>
<%- include('partials/header.ejs') %>

<body>



	<main>
		<div class="div-form">
			<form class="product-create" method="POST" action="/productos/crear-producto" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Guitarra eléctrica SG"
							class="form-input product-name">
							<% if (locals.errors && errors.name) { %>
								<div class="text-danger">
									<%= errors.name.msg  %> 
								</div>
							<% } %> 
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
					</div>

					<div class="col-12 col-md-6">
						<label for="product-image" class="form-label">Imagen:</label>
						<input type="file" id="product-image" name="image" placeholder="Imagen" class="form-input">
						<% if (locals.errors && errors.image) { %>
							<div class="text-danger">
								<%= errors.image.msg  %> 
							</div>
						<% } %> 
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">

							<option value="Microfonos">Microfonos</option>
							<option value="Guitarras">Guitarras</option>
							<option value="percusión">Percusión</option>
							<option value="viento">Instrumentos de viento</option>
							<option value="CDs">CDs</option>
							<option value="Vinilos">Vinilos</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input product-description"></textarea>
						<% if (locals.errors && errors.description) { %>
							<div class="text-danger">
								<%= errors.description.msg  %> 
							</div>
						<% } %> 
					</div>

					<div class="col-12">
						<label for="stock" class="form-label">Stock:</label>
						<input type="number" style="width: 40px;" name="stock">
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Crear producto</button>
					</div>
				</div>

				<div class="errores">
					<ul></ul>
				</div>
			</form>
		</div>
	</main>


	<%- include('partials/footer.ejs') %>
<script src="/js/validation-product-create.js"></script>
</body>